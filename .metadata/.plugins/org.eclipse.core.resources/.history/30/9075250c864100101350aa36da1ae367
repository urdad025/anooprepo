package javaOOS;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

public class ArraListClass {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		

		
		String[] arr = {"mango","Cherry","Grapes"};
		
		List<String> list = new ArrayList<>(Arrays.asList(arr));
		
		list.add("papaya");
		
		for ( String a:list) {
			
			System.out.println(a);
		}
		
		int[] num = {6,7,3,1,2,3,4,5};
		
	List<Integer> list1=	Arrays.stream(num).boxed().distinct().sorted((a,b)->b -a).toList();
	
	int index = 0;
	for (Integer x : list1) {
	    System.out.println("Index: " + index + ", Value: " + x);
	    index++;
		
	}
	
	System.out.println(list1.stream().limit(2));
	

}}
