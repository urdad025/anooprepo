package anooppandey.pageobjects;

import java.util.List;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;
import org.testng.Assert;

public class MyCart {

	WebDriver driver;

	public MyCart(WebDriver driver) {
		// super(driver);
		this.driver = driver;
		PageFactory.initElements(driver, this);

	}

	@FindBy(css = ".cartSection h3")
	List<WebElement> itemsInCart;

	public List<WebElement> getProdInCart() {

		return itemsInCart;
	}

	public void prodMatchIncart(String productName) {

		Boolean match = getProdInCart().stream().anyMatch(pcart -> pcart.getText().equals(productName));
		Assert.assertTrue(match);
	}
}

