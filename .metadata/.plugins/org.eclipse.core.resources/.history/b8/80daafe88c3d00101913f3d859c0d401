package javaOOS;

import java.util.ArrayList;
import java.util.List;

public class ValidPalindrome {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
		List<String> str = new ArrayList<String>();
		str.add("A man, a plan, a canal");
		str.add("race a car");
		str.add("");

		
		str.stream().filter(a->a.equalsIgnoreCase(isPalindrome(a))).forEach(x-> System.out.println(x));
		
		
		
	}
	
	
	
		
		
public static String isPalindrome(String abc) {
	

	
	
	String x =new StringBuilder(abc).reverse().toString();
	
	System.out.println(x);
	
	
	

	
	
	
	
	
}
	

}
