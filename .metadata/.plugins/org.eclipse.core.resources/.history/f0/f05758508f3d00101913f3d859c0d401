package javaOOS;

import java.util.ArrayList;
import java.util.List;

public class ValidPalindrome {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		List<String> str = new ArrayList<String>();
		str.add("A man, a plan, a canal");
		str.add("race a car");
		str.add(" ");

	
		
		for (String x:str) {
			
			String abc =x.replaceAll("[^a-zA-Z0-9]", "");
			
			if(abc.equals(isPalindrome(abc))) {
				System.out.println(""+);
			}
			
		}
	}

	public static String isPalindrome(String abc) {
		
		abc = abc.replaceAll("[^a-zA-Z0-9]", "");

		String x = new StringBuilder(abc).reverse().toString();

		System.out.println(x.toLowerCase());
		return x.toLowerCase();

	}

}
